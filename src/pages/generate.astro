---
import Layout from '../layouts/Layout.astro';
import FormInput from '../components/FormInput.astro';
---

<Layout title="Generate URL - DrawCanvas">
    <main class="min-h-screen bg-background py-12 px-4 sm:px-6 lg:px-8">
        <div class="min-h-screen mx-auto max-w-4xl">
            <h1 class="text-4xl font-bold text-foreground mb-2">Generate Canvas URL</h1>
            <p class="text-muted-foreground mb-8">Configure your drawing canvas and generate a shareable URL</p>

            <div class="bg-card border border-border rounded-lg p-6 mb-8">
                <form id="urlForm" class="space-y-6">
                    <FormInput
                            id="sizeInput"
                            label="Brush Size (1-50)"
                            type="number"
                            value="5"
                            min="1"
                            max="50"
                    />

                    <!-- Colors Section -->
                    <div>
                        <label class="block text-sm font-medium text-foreground mb-2">
                            Available Colors
                        </label>
                        <div class="space-y-2">
                            <label class="flex items-center gap-2">
                                <input type="radio" name="colorMode" value="all" checked class="text-primary" />
                                <span class="text-foreground">All default colors (*)</span>
                            </label>
                            <label class="flex items-center gap-2">
                                <input type="radio" name="colorMode" value="custom" class="text-primary" />
                                <span class="text-foreground">Custom colors</span>
                            </label>
                        </div>
                        <FormInput
                                id="customColors"
                                type="text"
                                placeholder="#ff0000,#00ff00,#0000ff"
                                disabled={true}
                                note="Enter comma-separated hex colors"
                        />
                    </div>

                    <!-- Input Controls Section -->
                    <div class="border-t border-border pt-6">
                        <h3 class="text-lg font-semibold text-foreground mb-4">Input Controls</h3>

                        <!-- Eraser Input -->
                        <div class="mb-4">
                            <label class="flex items-center gap-2">
                                <input type="checkbox" id="eraserInputCheck" checked class="text-primary" />
                                <span class="text-foreground font-medium">Show Eraser Tool</span>
                            </label>
                        </div>

                        <!-- Cursor Size Input -->
                        <div class="mb-4">
                            <label class="flex items-center gap-2">
                                <input type="checkbox" id="cursorSizeInputCheck" checked class="text-primary" />
                                <span class="text-foreground font-medium">Show Cursor Size Control</span>
                            </label>
                        </div>

                        <!-- Undo/Redo Input -->
                        <div class="mb-4">
                            <label class="flex items-center gap-2">
                                <input type="checkbox" id="undoRedoInputCheck" checked class="text-primary" />
                                <span class="text-foreground font-medium">Show Undo/Redo Controls</span>
                            </label>
                        </div>

                        <!-- Background Inputs -->
                        <div class="mb-4">
                            <label class="flex items-center gap-2">
                                <input type="checkbox" id="backgroundInputsCheck" checked class="text-primary" />
                                <span class="text-foreground font-medium">Show Background Controls</span>
                            </label>
                        </div>

                        <!-- Grid Inputs -->
                        <div class="mb-4">
                            <label class="flex items-center gap-2">
                                <input type="checkbox" id="gridInputsCheck" checked class="text-primary" />
                                <span class="text-foreground font-medium">Show Grid Controls</span>
                            </label>
                        </div>
                    </div>

                    <!-- Hide Toolbar Option -->
                    <div class="border-t border-border pt-6">
                        <h3 class="text-lg font-semibold text-foreground mb-4">Toolbar Settings</h3>

                        <div class="mb-4">
                            <label class="flex items-center gap-2">
                                <input type="checkbox" id="hideToolbarCheck" class="text-primary" />
                                <span class="text-foreground font-medium">Hide Toolbar (minimal interface)</span>
                            </label>
                        </div>

                        <!-- Toolbar Position (only show if not hiding toolbar) -->
                        <div id="toolbarPositionGroup">
                            <label class="block text-sm font-medium text-foreground mb-2">
                                Toolbar Position
                            </label>
                            <select
                                    id="toolbarPositionSelect"
                                    class="w-full px-4 py-2 bg-secondary border border-border rounded-lg text-foreground focus:outline-none focus:ring-2 focus:ring-primary"
                            >
                                <option value="up">Top</option>
                                <option value="down">Bottom</option>
                                <option value="left">Left</option>
                                <option value="right">Right</option>
                            </select>
                        </div>
                    </div>

                    <!-- Background Controls -->
                    <div class="border-t border-border pt-6">
                        <h3 class="text-lg font-semibold text-foreground mb-4">Background Settings</h3>

                        <!-- Background Color -->
                        <div>
                            <label for="bgColorInput" class="block text-sm font-medium text-foreground mb-2">
                                Background Color
                            </label>
                            <input
                                    type="color"
                                    id="bgColorInput"
                                    value="#ffffff"
                                    class="w-20 h-10 rounded border border-border"
                            />
                        </div>

                        <!-- Background Image -->
                        <FormInput
                                id="bgImageInput"
                                label="Background Image URL"
                                type="url"
                                placeholder="https://example.com/image.jpg"
                                note="Optional: Add a background image"
                                className="mb-4"
                        />

                        <!-- Background Opacity -->
                        <FormInput
                                id="bgOpacityInput"
                                label="Background Opacity (0-100)"
                                type="number"
                                value="50"
                                min="0"
                                max="100"
                                className="mb-4"
                        />

                        <!-- Background Size -->
                        <FormInput
                                id="bgImageSizeInput"
                                label="Background Size (10-200%)"
                                type="number"
                                value="100"
                                min="10"
                                max="200"
                                className="mb-4"
                        />

                        <!-- Background Position X -->
                        <FormInput
                                id="bgPosXInput"
                                label="Background Position X (0-100%)"
                                type="number"
                                value="50"
                                min="0"
                                max="100"
                                note="0% = left, 50% = center, 100% = right"
                                className="mb-4"
                        />

                        <!-- Background Position Y -->
                        <FormInput
                                id="bgPosYInput"
                                label="Background Position Y (0-100%)"
                                type="number"
                                value="50"
                                min="0"
                                max="100"
                                note="0% = top, 50% = center, 100% = bottom"
                                className="mb-4"
                        />
                    </div>

                    <!-- Grid Controls -->
                    <div class="border-t border-border pt-6">
                        <h3 class="text-lg font-semibold text-foreground mb-4">Grid Settings</h3>

                        <!-- Grid Enabled -->
                        <div class="mb-4">
                            <label class="flex items-center gap-2">
                                <input type="checkbox" id="gridEnabledCheck" class="text-primary" />
                                <span class="text-foreground font-medium">Enable Grid</span>
                            </label>
                        </div>

                        <!-- Grid Color -->
                        <div class="mb-4">
                            <label for="gridColorInput" class="block text-sm font-medium text-foreground mb-2">
                                Grid Color
                            </label>
                            <input
                                    type="color"
                                    id="gridColorInput"
                                    value="#cccccc"
                                    class="w-20 h-10 rounded border border-border"
                            />
                        </div>

                        <!-- Grid Opacity -->
                        <FormInput
                                id="gridOpacityInput"
                                label="Grid Opacity (0-100)"
                                type="number"
                                value="30"
                                min="0"
                                max="100"
                                className="mb-4"
                        />

                        <!-- Grid Style -->
                        <div class="mb-4">
                            <label for="gridStyleSelect" class="block text-sm font-medium text-foreground mb-2">
                                Grid Style
                            </label>
                            <select
                                    id="gridStyleSelect"
                                    class="w-full px-4 py-2 bg-secondary border border-border rounded-lg text-foreground focus:outline-none focus:ring-2 focus:ring-primary"
                            >
                                <option value="solid">Solid Lines</option>
                                <option value="dotted">Dotted</option>
                                <option value="dashed">Dashed</option>
                                <option value="sparse">Sparse Lines</option>
                            </select>
                        </div>

                        <!-- Grid Size -->
                        <FormInput
                                id="gridSizeInput"
                                label="Grid Cell Size (10-100)"
                                type="number"
                                value="20"
                                min="10"
                                max="100"
                                className="mb-4"
                        />
                    </div>
                </form>
            </div>

            <!-- Generated URL -->
            <div id="resultSection" class="bg-card border border-border rounded-lg p-6">
                <h2 class="text-xl font-bold text-foreground mb-4">Generated URL</h2>

                <div class="bg-secondary rounded-lg p-4 mb-4 overflow-x-auto">
                    <code id="generatedUrl" class="text-sm text-foreground break-all"></code>
                </div>

                <div class="flex gap-4">
                    <button
                            id="copyBtn"
                            class="px-6 py-2 bg-primary text-primary-foreground rounded-lg font-medium hover:opacity-90 transition-opacity"
                    >
                        Copy URL
                    </button>
                    <a
                            id="openBtn"
                            href="#"
                            target="_blank"
                            class="px-6 py-2 bg-secondary text-secondary-foreground rounded-lg font-medium hover:bg-accent transition-colors"
                    >
                        Open Canvas
                    </a>
                </div>
            </div>
        </div>
    </main>

    <script is:inline src="/canvas-drawing-params/generate-script.js"></script>
</Layout>